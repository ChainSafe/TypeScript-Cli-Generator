import {ICliCommandOptions} from "../util";

export interface I<%= name %>Args {
    <% for (const opt of options) { %>
        <%= opt.name %>: <%= opt.type %>;
    <% } %>
}

export const <%= name.toLowerCase() %>Options: ICliCommandOptions<I<%= name %>Args> = {
    <% for (const opt of options) { %>
        <%= opt.name %>: {
            description: "<%= opt.description %>",
            normalize: true,
            default: "<%= opt.default %>",
            type: "<%= opt.type %>"
        },
    <% } %>
};